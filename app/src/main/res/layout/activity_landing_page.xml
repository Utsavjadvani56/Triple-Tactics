<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        tools:context=".LandingPage">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:layout_marginTop="200dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/registrationbg2" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="409dp"
            android:layout_height="250dp"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/registrationbg1" />

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="88dp"
            android:fontFamily="@font/lexend_bold"
            android:text="Triple Tactics!"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.195"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/lexend_bold"
            android:text="Three in a row \nor never let go!"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWelcome" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9">

            <TextView
                android:id="@+id/txtquote"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lexend_bold"
                android:text="Three marks. One winner.\nAre you ready?"
                android:textColor="@color/txtNight"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edPlayer1"
                style="@style/Registration_txt"
                android:ems="10"
                android:layout_marginTop="30dp"
                android:layout_width="250dp"
                android:inputType="text"
                android:hint="Enter Player 1 Name " />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textStyle="italic"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/lexend_bold"
                android:text="VS"
                android:textColor="@color/red"
                android:textSize="23sp" />

            <EditText
                android:id="@+id/edPlayer2"
                style="@style/Registration_txt"
                android:ems="10"
                android:layout_width="250dp"
                android:hint="Enter Player 2 Name"
                android:inputType="text"
                />


            <Button
                android:id="@+id/btnBegin"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/lexend_bold"
                android:text="Let's Begin"
                android:textAllCaps="true"
                android:backgroundTint="@color/btnRed"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>